<%- all_tabs = ["public-profile", "account-settings", "guilds", "notifications", "subscription", "billing"] %>
<div class="bg-white w-full flex flex-col gap-5 px-3 md:px-16 lg:px-28 md:flex-row text-[#161931]" data-controller="tabs" data-tabs-active-class="bg-indigo-100 border-indigo-500 italic shadow-xs text-gray-900" data-tabs-default-tab-value="public-profile">
  <aside class="hidden py-4 md:w-1/3 lg:w-1/4 md:block">
    <div class="sticky flex flex-col gap-2 p-4 text-sm border-r border-indigo-100 top-12">
      <h2 class="pl-3 mb-4 text-2xl font-semibold">Settings</h2>
      <% all_tabs.each do |tab| %>
        <%= button_tag tab.gsub("-", " ").titleize, class: "flex items-center px-3 py-2.5 font-bold bg-white text-indigo-900 border rounded-full", data: { "tabs-target": "btn", action: "tabs#select", id: "#{tab.downcase.gsub(" ", "-") }" } %>
      <% end %>
    </div>
  </aside>
  <main class="w-full min-h-screen py-1 md:w-2/3 lg:w-3/4 rounded-2xl">
    <div class="p-2 md:p-4">
      <%- all_tabs.each do |tab| %>
        <%= render partial: "#{tab}" %>
      <% end %>
    </div>
  </main>
</div>
