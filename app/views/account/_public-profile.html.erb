<div class="border-0 border-solid border-zinc-200" data-tabs-target="tab" id="public-profile">
  <h2 class="pl-6 text-2xl font-bold sm:text-xl">Public profile</h2>

  <div class="grid max-w-2xl mx-auto mt-8">
    <div class="flex flex-col items-center space-y-5 sm:flex-row sm:space-y-0">
      <img class="object-cover w-40 h-40 p-1 rounded-full ring-2 ring-indigo-300 dark:ring-indigo-500"
           src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fGZhY2V8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=500&q=60"
           alt="Bordered avatar">

      <div class="flex flex-col space-y-5 sm:ml-8">
        <button type="button"
                class="py-3.5 px-7 text-base font-medium text-indigo-100 focus:outline-none bg-[#202142] rounded-lg border border-indigo-200 hover:bg-indigo-900 focus:z-10 focus:ring-4 focus:ring-indigo-200 ">
          Change picture
        </button>
        <button type="button"
                class="py-3.5 px-7 text-base font-medium text-indigo-900 focus:outline-none bg-white rounded-lg border border-indigo-200 hover:bg-indigo-100 hover:text-[#202142] focus:z-10 focus:ring-4 focus:ring-indigo-200 ">
          Delete picture
        </button>
      </div>
    </div>

    <div class="items-center mt-8 sm:mt-14 text-[#202142]">
      <%= form_for(current_user, url: account_path(current_user.id), method: 'patch', html: { autocomplete: 'on' }) do |f| %>
        <div class="flex flex-col items-center w-full mb-2 space-x-0 space-y-2 sm:flex-row sm:space-x-4 sm:space-y-0 sm:mb-6">
          <div class="w-full">
            <%= f.label "first_name", class: "block mb-2 text-sm font-medium text-indigo-900 dark:text-white" do %>
              Your first name
            <% end %>
            <%= f.text_field "first_name", class: "bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5", placeholder: "Your first name", value: "Jane", required: true %>
          </div>
          <div class="w-full">
            <%= f.label "last_name", class: "block mb-2 text-sm font-medium text-indigo-900 dark:text-white" do %>
              Your last name
            <% end %>
            <%= f.text_field "last_name", class: "bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5", placeholder: "Your first name", value: "Jones", required: true %>
          </div>
        </div>

        <div class="mb-2 sm:mb-6">
          <%= f.label :email, class: "block mb-2 text-sm font-medium text-indigo-900 dark:text-white" do %>
            Your email
          <% end %>
          <%= f.email_field :email, class: "bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5", placeholder: "youremail@email.com", required: true %>
        </div>

        <div class="mb-2 sm:mb-6">
          <%= f.label :username, class: "block mb-2 text-sm font-medium text-indigo-900 dark:text-white" do %>
            Your username
          <% end %>
          <%= f.text_field :username, class: "bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5", placeholder: "yourusername", required: true %>
        </div>

        <div class="mb-2 sm:mb-6">
          <%= f.label "bio", class: "block mb-2 text-sm font-medium text-indigo-900 dark:text-white" %>
          <%= f.text_field "bio", class: "bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5", placeholder: "Your bio", value: "Your bio" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
